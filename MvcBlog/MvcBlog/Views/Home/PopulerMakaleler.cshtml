@model IEnumerable<MvcBlog.Models.Makale>


@{
    Layout = null;
}

<div class="card my-4">
    <h5 class="card-header">En Popüler Makaleler</h5>
    <div class="card-body">
        <div class="row">
            <div class="col-lg-6">
                @foreach (var item in Model)
                {
                    <ul class="list-unstyled mb-0">
                        <li>
                            <a href="/Home/MakaleDetay/@item.MakaleId">@item.Baslik (@item.Okunma)</a>
                        </li>
                    </ul>
                }

            </div>
        </div>
    </div>
</div>